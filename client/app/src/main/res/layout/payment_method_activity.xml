<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Pilih Metode Pembayaran"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_disabled"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="8dp" />

    <!-- Payment Method: DANA -->
    <LinearLayout
        android:id="@+id/ll_dana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/divider"
        android:layout_marginTop="8dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_dana"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Logo DANA"
            app:srcCompat="@drawable/dana" />

        <TextView
            android:id="@+id/tv_dana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="DANA"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Payment Method: OVO -->
    <LinearLayout
        android:id="@+id/ll_ovo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_dana"
        android:layout_marginTop="8dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_ovo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Logo OVO"
            app:srcCompat="@drawable/ovo" />

        <TextView
            android:id="@+id/tv_ovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="OVO"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Payment Method: GoPay -->
    <LinearLayout
        android:id="@+id/ll_gopay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_ovo"
        android:layout_marginTop="8dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_gopay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Logo GoPay"
            app:srcCompat="@drawable/gopay" />

        <TextView
            android:id="@+id/tv_gopay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="GoPay"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:text="Konfirmasi"
        android:textColor="@color/white" />

</RelativeLayout>
